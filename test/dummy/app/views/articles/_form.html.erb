<%= simple_translated_form_for(@article) do |f| %>
  <div class="form-inputs">
    <%= f.input :publish_at %>
  </div>
  <div>
    <%= f.languagify do |l| %>
      <%= l.input :subject %>
      <%= l.input :body %>
    <% end %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>